<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
<appender name="MyFile" class="org.apache.log4j.FileAppender">
<param name="file" value="/Users/prashhant/Downloads/RapidAPIFootBall/logs/MyFile.log"/>

<param name="Append" value="true"/>
<layout class="org.apache.log4j.PatternLayout">
<param name="ConversionPattern" value="%d{dd.MM.yyyy HH:mm:ss.SSS} [%t] %-5p %c{1}:%M - %m%n"/>
</layout>
</appender>

<root>
<priority value="info"/>
<appender-ref ref="MyFile"/>
</root>

</log4j:configuration>